            <Button fx:id="easy" mnemonicParsing="false" onAction="#easyLevel" prefHeight="50.0" prefWidth="100.0" text="START" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
