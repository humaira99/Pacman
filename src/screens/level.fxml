            <Label alignment="CENTER" prefHeight="60.0" prefWidth="100.0" text="Easy" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="182.0" text="Intermediate" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
