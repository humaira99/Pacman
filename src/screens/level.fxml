            <ImageView fitHeight="200.0" fitWidth="320.0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <image>
                  <Image url="@../characters/images/level1.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="200.0" fitWidth="320.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <image>
                  <Image url="@../characters/images/level2.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="200.0" fitWidth="320.0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <image>
                  <Image url="@../characters/images/level3.png" />
               </image>
            </ImageView>
